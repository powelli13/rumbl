<%= form_for @changeset,
    Routes.support_path(@conn, :create),
    fn f-> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
        <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <div>
    <%= text_input f, :summary, placeholder: "Summary" %>
  </div>
  <div>
    <%= text_input f, :details, placeholder: "Details" %>
  </div>
  <%= submit "Create Help Request" %>
<% end %>